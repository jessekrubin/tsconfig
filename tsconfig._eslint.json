{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "lib": ["es2023"]
  },
  "include": [
    "**/*.ts",
    "./*.cjs",
    "./*.config.cjs",
    "./*.config.cts",
    "./*.config.js",
    "./*.config.mjs",
    "./*.config.mts",
    "./*.config.ts",
    "./*.js",
    "./*.mjs",
    "./*.mts",
    "./*.ts",
    "./.*.cjs",
    "./.eslintrc.cjs",
    "./.eslintrc.js",
    "./example/*.mts",
    "./scripts/**/*.mts",
    "./scripts/**/*.ts"
  ],
  "exclude": ["./fixtures/**/*.*"]
}
